<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="BorderStyle" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="{DynamicResource Border.Static.BackGround}"/>
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="Margin" Value="5"/>
        <!--<Setter Property="BorderThickness" Value="2"/>-->
        <!--<Setter Property="BorderBrush" Value="{DynamicResource Border.Static.BorderBrush}"/>-->
    </Style>

    <Style x:Key="HeaderBorderStyle" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="{DynamicResource Border.Pink.BorderBrush}"/>
        <Setter Property="CornerRadius" Value="3 3 0 0"/>
    </Style>
</ResourceDictionary>